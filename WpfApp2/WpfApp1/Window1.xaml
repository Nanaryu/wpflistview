<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Dodaj/Edytuj ucznia" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal">
                <Label Content="PESEL*:" Width="100"/>
                <TextBox Name="PeselTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Imię*:" Width="100"/>
                <TextBox Name="FirstNameTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Drugie imię:" Width="100"/>
                <TextBox Name="SecondNameTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Nazwisko*:" Width="100"/>
                <TextBox Name="LastNameTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Data urodzenia*:" Width="100"/>
                <TextBox Name="BirthDateTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Telefon:" Width="100"/>
                <TextBox Name="PhoneNumberTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Adres*:" Width="100"/>
                <TextBox Name="AddressTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Miejscowość*:" Width="100"/>
                <TextBox Name="CityTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Kod pocztowy*:" Width="100"/>
                <TextBox Name="PostalCodeTextBox" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="OkButton" Content="OK" Click="OkButton_Click"/>
                <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>